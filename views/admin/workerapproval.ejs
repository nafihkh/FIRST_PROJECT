<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@5/dark.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --primary-darker: #1e3a8a;
            --secondary: #0ea5e9;
            --accent: #06b6d4;
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-card-hover: #334155;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
            --gradient-dark: linear-gradient(135deg, var(--primary-dark), var(--primary-darker));
        }

        body {
            font-family: "Inter";
            background-color: var(--dark-bg);
            color: var(--text-light);
        }

        .bg-blk {
            background-color: var(--dark-card);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .d-4 {
            width: 31.33%;
        }

        .custom-table-wrapper {
            background-color: var(--dark-card);
            color: var(--text-muted);
            border-radius: 19px;
            overflow: hidden;
            font-size: 14px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .custom-table {
            background: transparent !important;
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .custom-table thead th {
            color: var(--text-muted);
            background: var(--dark-card-hover);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-weight: 600;
            padding: 16px 18px;
        }

        .custom-table tbody tr {
            background: transparent;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .custom-table tbody tr:last-child {
            border-bottom: none;
        }

        .custom-table tbody td {
            color: var(--text-light);
            background: transparent !important;
            vertical-align: middle;
            padding: 16px 18px;
        }

        .custom-table tbody tr:hover td {
            background: rgba(255, 255, 255, 0.02);
        }

        .completed {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
            font-size: 12px;
        }

        .btn-approve,
        .btn-reject {
            position: relative;
            z-index: 10;
        }

        .btn-success {
            background: var(--success);
            border: none;
        }

        .btn-danger {
            background: var(--error);
            border: none;
        }
    </style>

</head>

<body>

    <%- include('../partials/header') %>

        <div class="d-flex">

            <%- include('../partials/sidebar') %>

                <div class=" w-100"
                    style="background: var(--dark-bg); min-height:100vh; font-family: 'Inter', sans-serif; color: var(--text-light); padding: 2.5rem;">
                    <h6 class="mb-4"><a class="text-decoration-none" style="color: var(--text-muted);" href="/admin/workers"><i
                                class="fa-solid fa-arrow-left" style="color: var(--text-muted);"></i> Back to List</a></h6>
                    <h5 class="fw-bold mb-4" style="color: var(--text-light);">Worker Approval</h5>

                    <div class="table-responsive custom-table-wrapper" style="position: relative; z-index: 1;">
                        <table id="table" class="table table-borderless align-middle custom-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Users</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% workers.forEach(worker=> { %>
                                    <tr>
                                        <td>#W<%= worker._id.toString().slice(-5) %>
                                        </td>
                                        <td>
                                            <img src="<%= worker.profile_photo || 'https://res.cloudinary.com/dqugwh4su/image/upload/v1761538454/profileeg_tnbpak.jpg' %>"
                                                class="rounded-circle me-2" width="30" height="30" />
                                            <%= worker.username %>
                                        </td>
                                        <td>
                                            <form action="/admin/approve-worker/<%= worker._id %>" method="POST">
                                                <button class="btn-approve btn btn-success rounded-3 text-white fw-bold" style="font-size: 14px;">Approve</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form action="/admin/reject-worker/<%= worker._id %>" method="POST">
                                                <button
                                                    class="btn btn-danger rounded-3 text-white fw-bold"
                                                    style="font-size: 14px">
                                                    Reject
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                </div>


        </div>


        </div>

</body>

</html>