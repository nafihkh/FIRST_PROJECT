<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        body {
            font-family: "Inter";
            background-color: #0f172a;
            color: white;
        }

        .topbar {
            width: 100%;
            border-bottom: 1px solid #777777;
        }

        .topbar a {
            font-size: 14px;
            color: #bcc1ca;
            margin-right: 10px;
        }

        .active {
            border-bottom: 2px solid #2450b1;
            padding-bottom: 3px;
        }

        .card {
            background: #1e293b;
            border: none;
            border-radius: 15px;
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

        <div class="d-flex">
            <%- include('../partials/sidebar') %>

                <div class="p-4 w-100" style="
          background: #0f172a;
          min-height: 100vh;
          font-family: 'Inter', sans-serif;
          color: white;
        ">
                    <h3 class="fw-bold mb-4">Payments</h3>

                    <div class="topbar mb-5">
                        <a class="text-decoration-none" href="">Transactions</a>
                        <a class="text-decoration-none" href="/admin/payments/invoice">Invoice</a>
                    </div>
                    <div class="row g-4 mb-4">
                        <div class="col-md-3">
                            <div class="card p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p style="color: #bdc1ca; font-size: 14px" class="mb-0 fw-semibold">
                                            TOTAL REVENUE
                                        </p>
                                        <h5 class="text-white fw-bold ms-1 mt-2">$2400</h5>
                                    </div>
                                    <img class="p-2 rounded-4" src="/images/money-green.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #10b98130" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p style="color: #bdc1ca; font-size: 14px" class="mb-0 fw-semibold">
                                            PENDING PAYMENTS
                                        </p>
                                        <h5 class="text-white fw-bold ms-1 mt-2">$2400</h5>
                                    </div>
                                    <img class="p-2 rounded-4" src="/images/clock-yellow.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #eab30836" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p style="color: #bdc1ca; font-size: 14px" class="mb-0 fw-semibold">
                                            COMPLETED
                                        </p>
                                        <h5 class="text-white fw-bold ms-1 mt-2">$2400</h5>
                                    </div>
                                    <img class="p-2 rounded-4" src="/images/check-blue.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #3b82f630" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p style="color: #bdc1ca; font-size: 14px" class="mb-0 fw-semibold">
                                            FAILED
                                        </p>
                                        <h5 class="text-white fw-bold ms-1 mt-2">$2400</h5>
                                    </div>
                                    <img class="p-2 rounded-4" src="/images/circle-cross-red.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #ef444436" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-8">
                            <div class="card p-3">
                                <h5 class="text-white fw-bold">Revenue Trends</h5>
                                <canvas id="lineChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card p-3">
                                <h5 class="text-white fw-bold mb-2">Recent Transactions</h5>
                                
                            </div>
                        </div>
                    </div>
                </div>
        </div>
</body>
<script>
    const lineCtx = document.getElementById("lineChart");
    new Chart(lineCtx, {
        type: "line",
        data: {
            labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
            datasets: [
                {
                    label: "Tasks",
                    data: [800, 950, 900, 1000, 1400, 1450, 1400],
                    borderColor: "#38bdf8",
                    fill: true,
                    backgroundColor: "rgba(56, 189, 248, 0.2)",
                },
            ],
        },
        options: {
            plugins: {
                legend: {
                    display: false,
                },
            },
        },
    });
</script>

</html>