<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        body {
            font-family: "Inter";
            background-color: #0f172a;
            color: white;
        }

        .bg-blk {
            background-color: #171c26;
        }

        .d-4 {
            width: 31.33%;
        }

        .custom-table-wrapper {
            background-color: #171c26;
            color: #bdc1ca;
            border-radius: 19px;
            overflow: hidden;
            font-size: 14px;
        }

        .custom-table {
            background: transparent !important;
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .custom-table thead th {
            color: #bdc1ca;
            background: #262a33;
            border-bottom: 1px solid #2f343d;
            font-weight: 600;
            padding: 16px 18px;
        }

        .custom-table tbody tr {
            background: transparent;
            border-bottom: 1px solid #2f343d;
        }

        .custom-table tbody tr:last-child {
            border-bottom: none;
        }

        .custom-table tbody td {
            color: #f3f4f6;

            background: transparent !important;
            vertical-align: middle;
            padding: 16px 18px;
        }

        .custom-table tbody tr:hover td {
            background: rgba(255, 255, 255, 0.02);
        }
        .Completed {
            background: #10B98133;
            color: #10b981;
            font-size: 12px;
        }
        .InProgress {
             background: #FACC1533;
            color: #facc15;
            font-size: 12px;
        }
    </style>

</head>

<body>

    <%- include('../partials/header') %>

        <div class="d-flex">

            <%- include('../partials/sidebar') %>

                <div class=" w-100"
                    style="background:#0f172a; min-height:100vh; font-family: 'Inter', sans-serif; color:white; padding: 2.5rem;">
                    <h6 class="mb-4"><a class="text-decoration-none" style="color: #9590a0;" href="/admin/workers"><i
                                class="fa-solid fa-arrow-left" style="color: #9590a0;"></i> Back to List</a></h6>
                    <div class="d-flex gap-3 w-100">
                        <div class="left rounded-4 bg-blk text-center py-5" style="width: 33.33%;">
                            <img class="rounded-circle" src="<%= worker.profile_photo || '/images/profileeg.jpg' %>" alt="" height="100px" width="100px">
                            <h3 class="fw-semibold my-1"><%= worker.username %></h3>
                            <h6 style="color: #BDC1CAFF; font-size: 14px;">#W<%= worker._id.toString().slice(-5) %></h6>
                            <h6 style="color: #BDC1CAFF; font-size: 14px;" class="email"><%= worker.email %></h6>
                        </div>
                        <div class="right col-8" width="66.66%">
                            <div class="top d-flex justify-content-between">
                                <div class="content p-3 d-4 rounded-4 bg-blk">
                                    <img class="p-2 rounded-4" src="/images/check-blue.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #3B82F630" />
                                    <h3 class="fw-bold ms-1 my-1"><%= stats.totalWorksDone %></h3>
                                    <h6 style="font-size: 14px; color:#BDC1CAFF;" class="fw-semibold">TOTAL WORKS DONE
                                    </h6>
                                </div>
                                <div class="content p-3 d-4 rounded-4 bg-blk">
                                    <img class="p-2 rounded-4" src="/images/clock-yellow.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #EAB30836" />
                                    <h3 class="fw-bold ms-1 my-1"><%= stats.worksInProgress %></h3>
                                    <h6 style="font-size: 14px; color:#BDC1CAFF; " class="fw-semibold">WORKS IN PROGRESS
                                    </h6>
                                </div>
                                <div class="content p-3 d-4  rounded-4 bg-blk">
                                    <img class="p-2 rounded-4" src="/images/money-green.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #10B98130" />
                                    <h3 class="fw-bold ms-1 my-1">$<%= stats.totalMoneyEarned %></h3>
                                    <h6 style="font-size: 14px; color:#BDC1CAFF;" class="fw-semibold">TOTAL MONEY SAVED
                                    </h6>
                                </div>
                            </div>
                            <div class="buttom">
                                <h5 class="fw-semibold mt-4">Work History</h5>
                                <div class="table-responsive custom-table-wrapper">
                                    <table id="table" class="table table-borderless align-middle custom-table">
                                        <thead>
                                            <tr>
                                                <th class="text-start">Work ID</th>
                                                <th class="text-start">Work Title</th>
                                                <th class="text-center">Status</th>
                                                <th>Date</th>
                                                <th class="text-start">Payment</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                             <% tasks.forEach((task, index) => { %>
                                            <tr>
                                                <td class="text-start"><%= index + 1 %></td>
                                                <td class="text-start">
                                                    <%= task.title %>
                                                </td>
                                                <td class="text-center"><span class="btn <%= task.progress %> fw-semibold rounded-5"><%= task.progress %></span></td>
                                                <td><%= task.created_at_formatted %></td>
                                                <td>$<%= task.amount %></td>
                                            
                                            </tr>
                                             <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


        </div>

</body>
<script>
    document.querySelector(".calendar-icon").addEventListener("click", () => {
        document.getElementById("date").showPicker();
    });
    const formattedTasks = tasks.map(t => ({
  ...t.toObject(),
  created_at_formatted: t.created_at.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).replace(/ /, ' ') // ensure space after comma if needed
}));

</script>

</html>