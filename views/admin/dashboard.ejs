<!DOCTYPE html>
<html lang="en">

<head>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Overview</title>
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --primary-darker: #1e3a8a;
            --secondary: #0ea5e9;
            --accent: #06b6d4;
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-card-hover: #334155;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
            --gradient-dark: linear-gradient(135deg, var(--primary-dark), var(--primary-darker));
        }

        body {
            font-family: "Inter";
            background-color: var(--dark-bg);
            color: var(--text-light);
        }

        .card {
            background: var(--dark-card);
            border: none;
            border-radius: 15px;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            border-color: rgba(59, 130, 246, 0.2);
        }

        .nav-link.active {
            background: #6366f1 !important;
        }

        /* Animation for numbers */
        @keyframes countUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .count-animate {
            animation: countUp 0.8s ease-out forwards;
        }

        /* Pulse animation for cards */
        @keyframes pulseGlow {
            0% {
                box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
            }
        }

        .pulse-card {
            animation: pulseGlow 2s infinite;
        }

        /* Fade in animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.6s ease-out forwards;
        }

        /* Staggered animation delay */
        .card:nth-child(1) { animation-delay: 0.1s; }
        .card:nth-child(2) { animation-delay: 0.2s; }
        .card:nth-child(3) { animation-delay: 0.3s; }
        .card:nth-child(4) { animation-delay: 0.4s; }

        /* Loading animation */
        @keyframes shimmer {
            0% {
                background-position: -200px 0;
            }
            100% {
                background-position: 200px 0;
            }
        }

        .loading-shimmer {
            background: linear-gradient(90deg, var(--dark-card) 25%, var(--dark-card-hover) 50%, var(--dark-card) 75%);
            background-size: 200px 100%;
            animation: shimmer 1.5s infinite;
        }
    </style>
</head>

<body>

    <%- include('../partials/header') %>

        <div class="d-flex">

            <%- include('../partials/sidebar') %>

                <div class="flex-grow-1 p-4">
                    <h3 class="fw-bold mb-4 fade-in-up" style="color: var(--text-light);">Dashboard Overview</h3>

                    <div class="row g-4 mb-4">
                        <div class="col-md-3">
                            <div class="card p-3 fade-in-up">
                                <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538417/clock_zdpr3e.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #9333eaff" />
                                    <span style="color: #7c3bedff; font-size: 14px"><img
                                            style="width: 16px; height: 16px" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538411/arrowupright-purple_wfgnxj.svg"
                                            alt="" />12.3%</span>
                                </div>
                                <h3 class="fw-bold ms-1 mt-2 count-animate" style="color: var(--text-light);" id="openTasks">0</h3>
                                <p style="color: var(--text-muted); font-size: 14px" class="mb-0 fw-semibold">
                                    OPEN TASKS
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card p-3 fade-in-up">
                                <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538416/circlecheck_vsob2l.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #16a34aff" />
                                    <span style="color: #4ade80ff; font-size: 14px"><img
                                            style="width: 16px; height: 16px" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538411/arrowupright-green_pognoo.svg"
                                            alt="" />12.3%</span>
                                </div>
                                <h3 class="fw-bold ms-1 mt-2 count-animate" style="color: var(--text-light);" id="completedTasks">0</h3>
                                <p style="color: var(--text-muted); font-size: 14px" class="mb-0 fw-semibold">
                                    COMPLETED TASKS
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card p-3 fade-in-up">
                                <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538431/hourglass_zyqr1z.svg" alt="" style="
                    height: 44px;
                    width: 44px;
                    background: linear-gradient(
                      180deg,
                      #efb034ff 0%,
                      #ef5634ff 100%
                    );
                  " />
                                    <span style="color: #fb923cff; font-size: 14px"><img
                                            style="width: 16px; height: 16px" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538410/arrowdownright-yellow_ddik06.svg"
                                            alt="" />12.3%</span>
                                </div>
                                <h3 class="fw-bold ms-1 mt-2 count-animate" style="color: var(--text-light);" id="pendingPayments">0</h3>
                                <p style="color: var(--text-muted); font-size: 14px" class="mb-0 fw-semibold">
                                    PENDING PAYMENTS
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card p-3 fade-in-up">
                                <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="/images/users.svg" alt=""
                                        style="height: 44px; width: 44px; background-color: #3b82f6ff" />
                                    <span style="color: #60a5faff; font-size: 14px"><img
                                            style="width: 16px; height: 16px" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538411/arrowupright-blue_yg2sjg.svg"
                                            alt="" />12.3%</span>
                                </div>
                                <h3 class="fw-bold ms-1 mt-2 count-animate" style="color: var(--text-light);" id="activeUsers">0</h3>
                                <p style="color: var(--text-muted); font-size: 14px" class="mb-0 fw-semibold">
                                    ACTIVE USERS
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-8">
                            <div class="card p-3 fade-in-up">
                                <h5 class="fw-bold" style="color: var(--text-light);">Recent Tasks</h5>
                                <canvas id="lineChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card p-3 fade-in-up">
                                <h5 class="fw-bold mb-2" style="color: var(--text-light);">service Categories</h5>
                                <canvas id="pieChart" class="mb-4"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

         <script>
            const lineCtx = document.getElementById("lineChart");
            

            const lineChart = new Chart(lineCtx, {
                type: "line",
                data: {
                    labels: ["Open Tasks", "Completed Tasks"],
                    datasets: [
                        {
                            label: "Tasks",
                            data: [],
                            borderColor: "#38bdf8",
                            fill: true,
                            backgroundColor: "rgba(56, 189, 248, 0.2)",
                        },
                    ],
                },
                options: { plugins: { legend: { display: false } } },
            });
            const pieCtx = document.getElementById("pieChart");
            const pieChart = new Chart(pieCtx, {
                type: "pie",
                data: {
                    labels: ["Admins", "Workers", "Users"],
                    datasets: [
                        {
                            data: [],
                            backgroundColor: ["#f43f5e", "#f97316", "#6366f1", "#38bdf8", "#22c55e"]
                        },
                    ],
                },
                options: { plugins: { legend: { display: false } } },
            });

            fetch("/admin/metrics")
                .then(res => res.json())
                .then(data => {
                    document.getElementById("openTasks").innerText = data.totalTasks;
                    document.getElementById("completedTasks").innerText = data.completedTasks;
                    document.getElementById("pendingPayments").innerText = data.totalPayments;
                    document.getElementById("activeUsers").innerText = data.totalUsers;

                    // Update charts
                    lineChart.data.datasets[0].data = [
                        data.totalTasks,
                        data.completedTasks
                    ];
                    lineChart.update();

                    pieChart.data.datasets[0].data = [
                        data.totalAdmins,
                        data.totalWorkers,
                        data.totalUsers
                    ];
                    pieChart.update();
                })
                .catch(err => console.error("Metrics fetch error:", err));
        </script>

</body>

</html>