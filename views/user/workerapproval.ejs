<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %> | MyApp
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="/css/login.css" />
     <style>
          #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
    </style>
</head>

<body>
    <!-- <h2 class="text-center text-primary h2-login mt-4">NEIGHBOURHOOD</h2>
        <p class="text-center login-p">
            Welcome back! Please sign in to your account
        </p> -->
        <%- include('../partials/tosta') %>
         <div id="particles-js"></div>
    <div class="mx-auto login-box">
        <h4 class="login-text mb-1">Helper  Request</h4>
        <p class="text-center login-p mb-3">Join us to get started</p>

        <form id="requestForm">
            <input id="phone" name="phone" type="text" class="input-box mb-3" placeholder="Phone Number" required />
            <input id="email" name="email" type="email" class="input-box mb-3" placeholder="Email Address" required />
            <button type="submit" class="btn btn-primary login-btn">Submit</button>
        </form>

        <p id="error-msg" class="text-danger"></p>

        <p class="label text-center">
            By signing up, you agree to our
            <a href="" style="color: #ffff; font-weight: 700">Terms of Service</a>
            and
            <a href="" style="color: #ffff; font-weight: 700"><br />Privacy Policy</a>
        </p>
        <p class="label">
            Back to settings? <a href="/user/settings">Settings</a>
        </p>
        <p id="error-msg" class="text-danger"></p>
    </div>

 


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

     <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>

    <script>
          particlesJS("particles-js", {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: "#3b82f6" },
                shape: { type: "circle" },
                opacity: { value: 0.5, random: true },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: "#3b82f6",
                    opacity: 0.2,
                    width: 1
                },
                move: {
                    enable: true,
                    speed: 2,
                    direction: "none",
                    random: true,
                    straight: false,
                    out_mode: "out",
                    bounce: false
                }
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" },
                    resize: true
                }
            }
        });
        document.getElementById("requestForm").addEventListener("submit", async function(e) {
            e.preventDefault(); 

            const phone = document.getElementById("phone").value;
            const email = document.getElementById("email").value;

            try {
                const response = await fetch("/user/workerrequest", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ identifier: email || phone }) // use email or phone
                });

                const result = await response.json();

                if (result.success) {
                    showToast('success', 'Helper request sent successfully!', `Please Wait for Admin Approval.`)
                    console.log(result.success);
                    setTimeout(() => {
                            window.location.href = result.success === "true" ? "/user/dashboard" : "/user/settings";
                        }, 1500);
                    document.getElementById("requestForm").reset();
                } else {
                    showToast('warning', 'Request failed!', `Something went wrong`)
                }

            } catch (error) {
                console.error("Error:", error);
                showToast('error', 'Server error!', `Something went wrong`)
            }
        });


    </script>
</body>

</html>