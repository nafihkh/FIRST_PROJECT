<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    @font-face {
      font-family: "Inter";
      src: url("/fonts/Inter-Regular.ttf");
    }

    body {
      font-family: "Inter";
      background-color: #0f172a;
      color: white;
    }

    .chat-container {
      display: flex;
      height: 90vh;
    }

    .conversations {
      background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%);
      border-radius: 10px;
      padding: 15px;
      width: 280px;
    }

    .conversations .user {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
      cursor: pointer;
    }

    .conversations img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .chat-box {
      flex: 1;
      background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%);
      border-radius: 10px;
      margin-left: 20px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .chat-header img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .chat-message {
      margin-bottom: 10px;
      display: inline-block;
      padding: 10px 15px;
      border-radius: 8px;
      width: 50%;
    }

    .chat-message.sent {
      background-color: #4f46e5;
      text-align: left;
    align-self: flex-end;
      color: white;
    }

    .chat-message.received {
      background-color: #2c2f48;
      
      color: white;
    }
    .chat-messages {
  overflow-y: scroll;
}

.chat-messages::-webkit-scrollbar {
  display: none;
  }

  .chat-messages {
    -ms-overflow-style: none; 
    scrollbar-width: none;
  }
    .chat-input {
      display: flex;
      align-items: center;
      margin-top: 15px;
    }

    .chat-input input {
      background-color: #2c2f48;
      border: none;
      border-radius: 20px;
      padding: 12px;
      color: white;
      flex: 1;
      outline: none;
    }

    .chat-input button {
      margin-left: 10px;
      border-radius: 50%;
      background-color: #4f46e5;
      border: none;
      padding: 10px 15px;
      color: white;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      align-items: center;
    }

    .ticket {
      background: #353742;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 12px;
      cursor: pointer;
      align-items: center;
      gap: 10px;
    }

    .tiket-info {
      font-size: 12px;
      color: #888;
    }
   #messageInput::placeholder {
    color: #bcc1ca;
   }
   #messageInput:focus {
    background-color: #2c2f48;
      border: none;
      border-radius: 20px;
      padding: 12px;
      color: white;
      flex: 1;
      outline: none;
   }
   .time-stamp {
    color: #9095a0; 
    font-size: 12px; 
   }
   .time-stamp2 {
    color: #ffffff; 
    font-size: 12px; 
   }
  </style>
</head>

<body>

  <%- include('../partials/header') %>

    <div class="d-flex">
      <%- include('../partials/sidebar') %>

        <div class="flex-grow-1 p-4">
          <div class="container-fluid">
            <div class="top-bar">
              <h4 class="fw-bold">Messages & Notifications</h4>
            </div>

            <div class="chat-container">

              <!-- Left Sidebar: List of Users -->
              <div class="conversations rounded-4">
                <h5 class="fw-bold mb-3">Conversations</h5>


                <% conversations.forEach(conv=> { %>
                  <a href="/user/messages/<%= conv._id %>" class="text-decoration-none text-white">
                    <div class="ticket">
                      <h6 class="fw-bold text-uppercase">
                        <%= conv.title %>
                      </h6>
                      <label class="tiket-info">ticketid:<%= conv._id %></label>
                    </div>
                  </a>

                  <% }) %>





              </div>

              <!-- Chat Box -->
              <div class="chat-box rounded-4">

                <div class="chat-header" id="chatHeader">
                  <% if (currentConv) { %>
                    <strong id="chatUserName" class="fw-bold text-uppercase">
                      <%= currentConv.title || "Conversation" %>
                    </strong><br>
                    <small class="text-secondary">ID: <%= currentConv._id %></small>
                    <% } else { %>
                      <strong id="chatUserName">Select a user</strong>
                      <br>
                      <small class="text-secondary">Click on a user to start chat</small>
                      <% } %>
                </div>

                <hr class="text-secondary">


                <div class="chat-messages d-flex flex-column overflow-y-scroll" id="chatMessages">
                  <% if (messages && messages.length> 0) { %>
                    <% messages.forEach(msg=> { %>
                      <div class="chat-message <%= msg.senderType === 'worker' ? 'received' : 'sent' %>">
                        <div class="<%= msg.senderType === 'worker' ? 'text-start' : 'text-end' %>">
                          <div>
                          <%= msg.message %>
                        </div>
                      </div> <br>
                        <div class="<%= msg.senderType === 'worker' ? 'text-end' : 'text-start' %>">
                          <small class="<%= msg.senderType === 'worker' ? 'time-stamp' : 'time-stamp2' %>">
                           <%= new Date(msg.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                          </small>
                          </div>
                      </div>
                      <% }) %>
                        <% } else { %>
                          <p class="text-center text-secondary mt-5">No messages yet</p>
                          <% } %>
                </div>

                <hr class="text-secondary">

                <div class="chat-input">
                  <form method="POST" action="/user/send-message" class="d-flex w-100">
                    <input type="hidden" name="conversationId" value="<%= currentConv ? currentConv._id : '' %>">

                    <input id="messageInput" type="text" name="message" placeholder="Type your message..."
                      class="form-control" required>

                    <button id="sendButton" class="btn">âž¤</button>
                  </form>
                </div>

              </div>

            </div>
          </div>
        </div>
    </div>
</body>

</html>