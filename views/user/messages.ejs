<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    @font-face {
      font-family: "Inter";
      src: url("/fonts/Inter-Regular.ttf");
    }

    body {
      font-family: "Inter";
      background-color: #0f172a;
      color: white;
    }

    .chat-container {
      display: flex;
      height: 90vh;
    }

    .conversations {
      background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%);
      border-radius: 10px;
      padding: 15px;
      width: 280px;
    }

    .conversations .user {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
      cursor: pointer;
    }

    .conversations img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .chat-box {
      flex: 1;
      background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%);
      border-radius: 10px;
      margin-left: 20px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .chat-header {
      display: flex;
      align-items: center;
    }

    .chat-header img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .chat-message {
      margin-bottom: 10px;
      display: inline-block;
      padding: 10px 15px;
      border-radius: 8px;
      max-width: 70%;
    }

    .chat-message.sent {
      background-color: #4f46e5;
      align-self: flex-end;
      color: white;
    }

    .chat-message.received {
      background-color: #2c2f48;
      color: white;
    }

    .chat-input {
      display: flex;
      align-items: center;
      margin-top: 15px;
    }

    .chat-input input {
      background-color: #2c2f48;
      border: none;
      border-radius: 20px;
      padding: 12px;
      color: white;
      flex: 1;
      outline: none;
    }

    .chat-input button {
      margin-left: 10px;
      border-radius: 50%;
      background-color: #4f46e5;
      border: none;
      padding: 10px 15px;
      color: white;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      align-items: center;
    }
  </style>
</head>
<body>

  <%- include('../partials/header') %>

  <div class="d-flex">
    <%- include('../partials/sidebar') %>

    <div class="flex-grow-1 p-4">
      <div class="container-fluid">
        <div class="top-bar">
          <h4 class="fw-bold">Messages & Notifications</h4>
        </div>

        <div class="chat-container">

          <!-- Left Sidebar: List of Users -->
          <div class="conversations rounded-4">
            <h5 class="fw-bold mb-3">Conversations</h5>

                <div class="user" onclick="openChat('', 'NafihKh')">
                  <img src="/images/profileeg.jpg" alt="profile">
                  <div>
                    <strong>NafihKh</strong><br>
                    <small class="text-light">Click to chat</small>
                  </div>
                </div>
              
              <p class="text-light">No users available</p>
          </div>

          <!-- Chat Box -->
          <div class="chat-box rounded-4">
            <div class="chat-header" id="chatHeader">
              <img src="/images/profileeg.jpg" alt="">
              <div>
                <strong id="chatUserName">Select a user</strong><br>
                <small class="text-secondary">Click on a user to start chat</small>
              </div>
            </div>
            <hr class="text-secondary">

            <div class="chat-messages flex-grow-1" id="chatMessages"></div>

            <hr class="text-secondary">

            <div class="chat-input">
              <input id="messageInput" type="text" placeholder="Type your message..." disabled>
              <button id="sendButton" disabled>âž¤</button>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>


</body>
</html>
