<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    @font-face {
      font-family: "Inter";
      src: url("/fonts/Inter-Regular.ttf");
    }

    :root {
      --primary: #3b82f6;
      --primary-dark: #1e40af;
      --primary-darker: #1e3a8a;
      --secondary: #0ea5e9;
      --accent: #06b6d4;
      --dark-bg: #0f172a;
      --dark-card: #1e293b;
      --dark-card-hover: #334155;
      --text-light: #f1f5f9;
      --text-muted: #94a3b8;
      --success: #10b981;
      --warning: #f59e0b;
      --error: #ef4444;
      --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
    }

    body {
      font-family: "Inter";
      background-color: var(--dark-bg);
      color: var(--text-light);
    }

    .chat-container {
      display: flex;
      height: 90vh;
    }

    .conversations {
      background: var(--dark-card);
      border-radius: 10px;
      padding: 15px;
      width: 280px;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .conversations .user {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
      cursor: pointer;
    }

    .conversations img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .chat-box {
      flex: 1;
      background: var(--dark-card);
      border-radius: 10px;
      margin-left: 20px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .chat-header img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .chat-message {
      margin-bottom: 10px;
      display: inline-block;
      padding: 10px 15px;
      border-radius: 8px;
      width: 33%;
      transition: all 0.3s ease;
    }

    .chat-message.sent {
      background: var(--gradient);
      text-align: left;
      align-self: flex-end;
      color: var(--text-light);
    }

    .chat-message.received {
      background-color: rgba(255, 255, 255, 0.05);
      color: var(--text-light);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .chat-messages {
      overflow-y: scroll;
    }

    .chat-messages::-webkit-scrollbar {
      display: none;
    }

    .chat-messages {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    .chat-input {
      display: flex;
      align-items: center;
      margin-top: 15px;
    }

    .chat-input input {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      padding: 12px;
      color: var(--text-light);
      flex: 1;
      outline: none;
      transition: all 0.3s ease;
    }

    .chat-input input:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .chat-input button {
      margin-left: 10px;
      border-radius: 50%;
      background: var(--gradient);
      border: none;
      padding: 10px 15px;
      color: var(--text-light);
      transition: all 0.3s ease;
    }

    .chat-input button:hover {
      background: var(--primary-dark);
      transform: translateY(-1px);
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      align-items: center;
    }

    .ticket {
      background: rgba(255, 255, 255, 0.05);
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 12px;
      cursor: pointer;
      align-items: center;
      gap: 10px;
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .ticket:hover {
      background: rgba(255, 255, 255, 0.08);
      transform: translateY(-2px);
      border-color: rgba(59, 130, 246, 0.2);
    }

    .tiket-info {
      font-size: 12px;
      color: var(--text-muted);
    }

    #messageInput::placeholder {
      color: var(--text-muted);
    }

    #messageInput:focus {
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      padding: 12px;
      color: var(--text-light);
      flex: 1;
      outline: none;
    }

    .time-stamp {
      color: var(--text-muted);
      font-size: 12px;
    }

    .time-stamp2 {
      color: var(--text-light);
      font-size: 12px;
    }

    /* Animation for messages */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .chat-message {
      animation: fadeInUp 0.3s ease forwards;
    }

    hr.text-secondary {
      border-color: rgba(255, 255, 255, 0.1) !important;
    }

    .text-secondary {
      color: var(--text-muted) !important;
    }
  </style>
</head>

<body>

  <%- include('../partials/header') %>

    <div class="d-flex">
      <%- include('../partials/sidebar') %>

        <div class="flex-grow-1 p-4">
          <div class="container-fluid">
            <div class="top-bar">
              <h4 class="fw-bold" style="color: var(--text-light);">Messages & Notifications</h4>
            </div>

            <div class="chat-container">

              <!-- Left Sidebar: List of Users -->
              <div class="conversations rounded-4">
                <h5 class="fw-bold mb-3" style="color: var(--text-light);">Conversations</h5>

                <% conversations.forEach(conv=> { %>
                  <a href="/user/messages/<%= conv._id %>" class="text-decoration-none" style="color: var(--text-light);">
                    <div class="ticket">
                      <h6 class="fw-bold text-uppercase">
                        <%= conv.title %>
                      </h6>
                      <label class="tiket-info">ticketid:<%= conv._id %></label>
                    </div>
                  </a>
                  <% }) %>
              </div>

              <!-- Chat Box -->
              <div class="chat-box rounded-4">

                <div class="chat-header" id="chatHeader">
                  <% if (currentConv) { %>
                    <strong id="chatUserName" class="fw-bold text-uppercase" style="color: var(--text-light);">
                      <%= currentConv.title || "Conversation" %>
                    </strong><br>
                    <small class="text-secondary">ID: <%= currentConv._id %></small>
                    <% } else { %>
                      <strong id="chatUserName" style="color: var(--text-light);">Select a user</strong>
                      <br>
                      <small class="text-secondary">Click on a user to start chat</small>
                      <% } %>
                </div>

                <hr class="text-secondary">

                <div class="chat-messages d-flex flex-column overflow-y-scroll" id="chatMessages">
                  <% if (messages && messages.length> 0) { %>
                    <% messages.forEach(msg=> { %>
                      <div class="chat-message <%= msg.senderType === 'worker' ? 'received' : 'sent' %>">
                        <div class="<%= msg.senderType === 'worker' ? 'text-start' : 'text-end' %>">
                          <div>
                          <% if ( msg.message.startsWith('http://') ||  msg.message.startsWith('https://')) { %>
  <a href="<%=  msg.message %>" class="text-decoration-none" style="color: var(--text-light);" target="_blank"><%=  msg.message %></a>
<% } else { %>
  <p style="color: var(--text-light);"><%=  msg.message %></p>
<% } %>
                        </div>
                      </div> <br>
                        <div class="<%= msg.senderType === 'worker' ? 'text-end' : 'text-start' %>">
                          <small class="<%= msg.senderType === 'worker' ? 'time-stamp' : 'time-stamp2' %>">
                           <%= new Date(msg.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                          </small>
                          </div>
                      </div>
                      <% }) %>
                        <% } else { %>
                          <p class="text-center text-secondary mt-5">No messages yet</p>
                          <% } %>
                </div>

                <hr class="text-secondary">

                <div class="chat-input">
                  <form method="POST" action="/user/send-message" class="d-flex w-100">
                    <input type="hidden" name="conversationId" value="<%= currentConv ? currentConv._id : '' %>">

                    <input id="messageInput" type="text" name="message" placeholder="Type your message..."
                      class="form-control" required>

                    <button id="sendButton" class="btn">âž¤</button>
                  </form>
                </div>

              </div>

            </div>
          </div>
        </div>
    </div>
</body>

</html>