<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %> | MyApp
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="/css/login.css" />
    <style>
          #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
              .logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.8rem;
            font-weight: 700;
            color: #f1f5f9;
            display: block;
            width: 150px;
        }

        .logo-img {
            display: block;
            width: 100%;
        }
    </style>
</head>

<body>
    <%- include('../partials/tosta') %>
 <div id="particles-js"></div>
  <div class="logo">
        <img src="/images/logo.png" alt="" class="logo-img">
    </div>
    <p class="text-center login-p">
        Update your account password below to keep your account secure
    </p>
    <div class="mx-auto login-box">
        <h4 class="login-text mb-1">Change Password</h4>
        <p class="text-center login-p mb-3">Enter a new password below to change your password</p>
        <form id="resetform">

            <div class="password-wrapper">
                <input type="password" id="password" name="password" placeholder="New Password" class="input-box mb-4"
                    required />
                <span class="toggle-password" onclick="togglePassword()">
                    <img id="eye" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538430/eyeclose_oamg8x.svg" alt="" />
                </span>
            </div>
            <div class="conpassword-wrapper">
                <input type="password" id="conpassword" name="conpassword" placeholder="Confirm Password"
                    class="input-box mb-4" required />
                <span class="contoggle-password" onclick="contogglePassword()">
                    <img id="eye2" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538430/eyeclose_oamg8x.svg" alt="" />
                </span>
            </div>
            <button type="submit" class="btn btn-primary login-btn">Submit</button>
        </form>

        <p id="error-msg" class="text-danger"></p>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>


        <script>
               particlesJS("particles-js", {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: "#3b82f6" },
                shape: { type: "circle" },
                opacity: { value: 0.5, random: true },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: "#3b82f6",
                    opacity: 0.2,
                    width: 1
                },
                move: {
                    enable: true,
                    speed: 2,
                    direction: "none",
                    random: true,
                    straight: false,
                    out_mode: "out",
                    bounce: false
                }
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" },
                    resize: true
                }
            }
        });

            function togglePassword() {
                const input = document.getElementById("password");
                const eyeIcon = document.getElementById("eye");

                if (input.type === "password") {
                    input.type = "text";
                    eyeIcon.src = "https://res.cloudinary.com/dqugwh4su/image/upload/v1761538425/eye_jysncb.svg";
                } else {
                    input.type = "password";
                    eyeIcon.src = "https://res.cloudinary.com/dqugwh4su/image/upload/v1761538430/eyeclose_oamg8x.svg";
                }
            }
            function contogglePassword() {
                const input = document.getElementById("conpassword");
                const eyeIcon = document.getElementById("eye2");

                if (input.type === "password") {
                    input.type = "text";
                    eyeIcon.src = "https://res.cloudinary.com/dqugwh4su/image/upload/v1761538425/eye_jysncb.svg";
                } else {
                    input.type = "password";
                    eyeIcon.src = "https://res.cloudinary.com/dqugwh4su/image/upload/v1761538430/eyeclose_oamg8x.svg";
                }
            }

            document.getElementById("resetform").addEventListener("submit", async function (e) {
                e.preventDefault();

                const password = document.getElementById("password").value;
                const conpassword = document.getElementById("conpassword").value;
                const email = new URLSearchParams(window.location.search).get("email"); 

                try {
                    const res = await fetch("/auth/user/reset-password", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ email, password, conpassword }),
                    });

                    const data = await res.json();
                    if (res.ok) {
                        showToast('success', 'Password Changed Successfull!', `${data.message}`)
                        setTimeout(() => {
                            window.location.href = "/user/login";
                        }, 2000);
                    } else {
                        
                        showToast('error', 'Something went wrong', `${data.error}`)
                    }
                } catch (err) {
                    showToast('error', 'Server error', 'There was an Server error. Please try again later.')
                }
            });
        </script>
</body>

</html>