<script>
const tasksContainer = document.getElementById("tasksContainer");
const cartContainer = document.getElementById("cartContainer");

// Load tasks dynamically
async function loadTasks() {
    try {
        const res = await fetch("/user/tasks/progress-nontaken");
        if (!res.ok) throw new Error("HTTP error " + res.status);
        const tasks = await res.json();
        tasksContainer.innerHTML = "";

        tasks.forEach(task => {
            const card = document.createElement("div");
            card.className = "col-md-3";
            card.innerHTML = `
                <div class="card rounded-3" style="background-color: #171c26;">
                    <img class="top rounded-top-3" src="${task.photo || '/images/task1.png'}" alt="">
                    <div class="d-flex justify-content-between px-2 align-items-center">
                        <div class="d-flex mt-2 position-relative align-items-center">
                            <img class="rounded-circle me-2" src="${task.user_id?.profile_photo || '/images/profileeg.jpg'}" width="25" height="25">
                            <span class="onlineornot rounded-circle"></span>
                            <span style="color: #BDC1CA; font-size: 14px;" class="fw-semibold">${task.user_id?.username || 'Unknown'}</span>
                        </div>
                        <h2 class="fw-bold my-auto" style="font-size: 14px; color: #fff;"><i class="bi bi-star-fill"></i> ${task.rating || '2.5'}</h2>
                    </div>
                    <p style="color: #565e6c; font-size: 14px;" class="px-2">${task.description || 'No description available'}</p>
                    <div class="d-flex justify-content-between px-2 mb-2">
                        <h2 class="fw-bold my-auto" style="font-size: 18px; color:#fff;">$${task.amount || 0}</h2>
                        <span style="color: #565e6c; font-size: 14px;">Due: ${task.duration || 'N/A'}</span>
                    </div>
            `;
            tasksContainer.appendChild(card);
        });
    } catch (err) {
        console.error(err);
    }
}

// Calendar icon click
document.querySelector(".calendar-icon")?.addEventListener("click", () => {
    const input = document.getElementById("dateFilter");
    if (input.showPicker) input.showPicker(); else input.click();
});

// Load tasks on page load
document.addEventListener("DOMContentLoaded", () => {
    loadTasks();
});
</script>
