<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat Conversation</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f1f1f1; padding: 20px; }
        .message-box { max-width: 600px; margin: auto; background: white; padding: 15px; border-radius: 5px; }
        .message { padding: 10px; margin: 5px 0; border-radius: 5px; }
        .sender { background: #d1ffd6; text-align: left; }
        .receiver { background: #d6e0ff; text-align: right; }
    </style>
</head>
<body>

<div class="message-box">
    <h2>Chat Messages</h2>
    <h5><%= conversation.title %></h5>

    <% messages.forEach(msg => { %>
        <div class="message <%= msg.senderType === 'worker' ? 'sender' : 'receiver' %>">
            <strong><%= msg.senderType %>:</strong> <%= msg.message %> <br>
            <small><%= new Date(msg.createdAt).toLocaleString() %></small>
        </div>
    <% }) %>

    <form method="POST" action="/user/send-message" class="chat-form">
  <input type="hidden" name="conversationId" value="<%= messages && messages.length > 0 ? messages[0].conversationId : conversation._id %>">
  <input type="text" name="message" placeholder="Type your message..." required>
  <button type="submit">Send</button>
</form>
</div>

</body>
</html>
