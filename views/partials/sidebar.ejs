  /* Automatic Main Content Adjustment */
  body {
    padding-left: 280px !important;
  }

  /* Ensure header is positioned correctly */
  header {
    position: fixed;
    top: 0;
    left: 280px;
    right: 0;
    z-index: 999;
    background: var(--dark-bg);
  }

  /* Main content area */
  main, .main-content, .container-fluid, .container, .content-area {
    margin-left: 0 !important;
    padding-left: 0 !important;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .sidebar-main {
      width: 100%;
      height: auto;
      position: relative;
      z-index: 1001;
    }

    body {
      padding-left: 0 !important;
    }

    header {
      left: 0;
      position: relative;
    }
  }
</style>

<script>
  // Auto-adjust content on page load
  document.addEventListener('DOMContentLoaded', function() {
    // Add animation to nav items
    const navItems = document.querySelectorAll('.nav-link');
    navItems.forEach((item, index) => {
      item.style.animationDelay = `${index * 0.1}s`;
      item.style.animation = 'slideInLeft 0.5s ease both';
    });

    // Ensure body has proper padding
    document.body.style.paddingLeft = '280px';
    
    // Fix for any existing content containers
    const contentContainers = document.querySelectorAll('.container, .container-fluid, main, .main-content');
    contentContainers.forEach(container => {
      container.style.marginLeft = '0';
      container.style.paddingLeft = '0';
    });
  });

  // Handle window resize
  window.addEventListener('resize', function() {
    if (window.innerWidth <= 768) {
      document.body.style.paddingLeft = '0';
    } else {
      document.body.style.paddingLeft = '280px';
    }
  });
</script>