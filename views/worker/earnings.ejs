<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --primary-darker: #1e3a8a;
            --secondary: #0ea5e9;
            --accent: #06b6d4;
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-card-hover: #334155;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
            --gradient-dark: linear-gradient(135deg, var(--primary-dark), var(--primary-darker));
        }

        body {
            font-family: "Inter";
            background-color: var(--dark-bg);
            color: var(--text-light);
        }

        .card {
            background: var(--dark-card);
            border: none;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            border-color: rgba(59, 130, 246, 0.2);
        }

        .nav-link.active {
            background: var(--gradient) !important;
            color: var(--text-light) !important;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        .card-summary {
            border: none;
            border-radius: 12px;
            padding: 20px;
            color: var(--text-light);
            transition: all 0.3s ease;
        }

        .card-summary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .card-blue {
            background: var(--primary);
        }

        .card-orange {
            background: var(--warning);
        }

        .card-green {
            background: var(--success);
        }

        .summary-title {
            font-size: 14px;
            opacity: 0.8;
        }

        .summary-amount {
            font-size: 28px;
            font-weight: 700;
        }

        .invoice-btn {
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 600;
        }

        .custom-table-wrapper {
            background-color: var(--dark-card);
            color: var(--text-muted);
            border-radius: 12px;
            overflow: hidden;
            font-size: 14px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .custom-table {
            background: transparent !important;
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .custom-table thead th {
            color: var(--text-muted);
            background: rgba(255, 255, 255, 0.05);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-weight: 600;
            padding: 16px 18px;
        }

        .custom-table tbody tr {
            background: transparent;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .custom-table tbody tr:last-child {
            border-bottom: none;
        }

        .custom-table tbody td {
            color: var(--text-light);
            background: transparent !important;
            vertical-align: middle;
            padding: 16px 18px;
        }

        .custom-table tbody tr:hover td {
            background: rgba(255, 255, 255, 0.03);
            transform: translateY(-1px);
        }

        .status-completed {
            background: var(--success);
            color: var(--text-light);
            font-size: 12px;
            padding: 4px 12px;
            border-radius: 12px;
        }

        .status-pending {
            background: var(--warning);
            color: var(--text-light);
            font-size: 12px;
            padding: 4px 12px;
            border-radius: 12px;
        }

        .status-active {
            background: var(--error);
            color: var(--text-light);
            font-size: 12px;
            padding: 4px 12px;
            border-radius: 12px;
        }
        
        .topbar {
            width: 100%;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 10px;
        }

        .topbar a {
            font-size: 14px;
            color: var(--text-muted);
            margin-right: 10px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .topbar a:hover {
            color: var(--primary);
        }
          
        .status-paid {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
            font-size: 12px;
            padding: 4px 12px;
            border-radius: 12px;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .status-pending {
            background: rgba(239, 68, 68, 0.2);
            color: var(--error);
            font-size: 12px;
            padding: 4px 12px;
            border-radius: 12px;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        /* Animation for cards */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card-summary {
            animation: fadeInUp 0.5s ease forwards;
        }

        .card-summary:nth-child(1) { animation-delay: 0.1s; }
        .card-summary:nth-child(2) { animation-delay: 0.2s; }
        .card-summary:nth-child(3) { animation-delay: 0.3s; }

        /* Animation for table rows */
        .custom-table tbody tr {
            animation: fadeInUp 0.5s ease forwards;
        }

        .custom-table tbody tr:nth-child(1) { animation-delay: 0.4s; }
        .custom-table tbody tr:nth-child(2) { animation-delay: 0.5s; }
        .custom-table tbody tr:nth-child(3) { animation-delay: 0.6s; }
    </style>
</head>

<body>

    <%- include('../partials/header') %>

        <div class="d-flex">

            <%- include('../partials/sidebar') %>

                <div class="flex-grow-1 p-4">
                    <h3 class="fw-bold" style="color: var(--text-light);">Earnings</h3>
                     <div class="topbar mb-5">
                        <a class="text-decoration-none active" href="/worker/earnings">Transactions</a>
                        <a class="text-decoration-none" href="/worker/earnings/invoice">Invoice</a>
                    </div>

                    <!-- Summary Cards -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <div class="card-summary card-blue">
                                <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538411/box-check_wqpg1k.svg" alt=""
                                            style="height: 44px; width: 44px; background-color: rgba(255, 255, 255, 0.2)" />
                                    <h3 class="summary-amount"><%= totalPayments %></h3>
                                </div>
                                <p class="summary-title mt-1 mb-1">Total Payments</p>
                                <p class="mb-0 small">Lifetime earnings count</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card-summary card-orange">
                                <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538417/clock_zdpr3e.svg" alt=""
                                            style="height: 44px; width: 44px; background-color: rgba(255, 255, 255, 0.2)" />
                                    <h3 class="summary-amount">₹<%= totalpending %></h3>
                                </div>
                                <p class="summary-title mt-1 mb-1">Pending</p>
                                <p class="mb-0 small">3 payments processing</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card-summary card-green">
                                 <div class="d-flex justify-content-between">
                                    <img class="p-2 rounded-4" src="/images/valut.svg" alt=""
                                            style="height: 44px; width: 44px; background-color: rgba(255, 255, 255, 0.2)" />
                                    <h3 class="summary-amount">₹<%= totalSpent %></h3>
                                </div>
                                <p class="summary-title mt-1 mb-1">Total Earnings</p>
                                <p class="mb-0 small">Lifetime earnings</p>
                            </div>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-3" style="color: var(--text-light);">Transaction History</h5>
                    <div class="table-responsive custom-table-wrapper">
                        <table id="table" class="table table-borderless align-middle custom-table">
                            <thead>
                                <tr>
                                    <th>Transaction ID</th>
                                    <th>Task</th>
                                    <th>Amount</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Date</th>
                                </tr>
                            </thead>
                            <tbody id="tbody">
                                <% if (payments.length===0) { %>
                                    <tr>
                                        <td colspan="6" class="text-center" style="color: var(--text-muted);">No transactions found</td>
                                    </tr>
                                <% } %>
                                <% payments.forEach(payment=> { %>
                                    <tr>
                                        <td style="color: var(--text-light);">#<%= payment._id.toString().substring(0, 8) %></td>
                                        <td><strong style="color: var(--text-light);">
                                            <%= payment.task_id ? payment.task_id.title : 'No Task' %>
                                        </strong></td>
                                        <td class="text-success">₹<%= payment.amount %></td>
                                        <td class="text-center">
                                            <% if(payment.status==='completed' ){ %>
                                                <span class="status-paid">Paid</span>
                                            <% } else { %>
                                                <span class="status-pending">
                                                    <%= payment.status %>
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="text-center" style="color: var(--text-light);">
                                            <%= new Date(payment.created_at).toLocaleDateString("en-US", { 
                                                month: 'short',
                                                day: 'numeric',
                                                year: 'numeric' 
                                            }) %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
</body>
</html>