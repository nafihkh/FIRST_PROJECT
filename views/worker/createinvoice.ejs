<!DOCTYPE html>
<html lang="en">

<head>
    <title>Create Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --primary-darker: #1e3a8a;
            --secondary: #0ea5e9;
            --accent: #06b6d4;
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-card-hover: #334155;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
            --gradient-dark: linear-gradient(135deg, var(--primary-dark), var(--primary-darker));
        }

        body {
            font-family: "Inter";
            background-color: var(--dark-bg);
            color: var(--text-light);
        }

        .card {
            background: var(--dark-card);
            border: none;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            border-color: rgba(59, 130, 246, 0.2);
        }

        .nav-link.active {
            background: var(--gradient) !important;
            color: var(--text-light) !important;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        .invoice-box {
            background: var(--dark-card);
            border-radius: 16px;
            width: 100%;
            max-width: 510px;
            text-align: center;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            padding: 40px 20px;
            margin: 20px auto;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

        .invoice-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
            border-color: rgba(59, 130, 246, 0.3);
        }

        .invoice-text {
            font-weight: 700;
            color: var(--text-light);
        }

        .input-box {
            width: 100%;
            max-width: 384px;
            height: 40px;
            padding-left: 20px;
            padding-right: 10px;
            font-size: 14px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            outline: none;
            color: var(--text-light);
            display: block;
            margin: 10px auto;
            transition: all 0.3s ease;
        }

        .input-box:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .select-box {
            width: 100%;
            max-width: 384px;
            height: 40px;
            padding: 0 20px;
            font-size: 14px;
            color: var(--text-light);
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            outline: none;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .select-box:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        /* Custom arrow */
        .select-box::after {
            content: "â–¼";
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: var(--text-muted);
            font-size: 12px;
        }

        /* Wrapper for positioning arrow */
        .select-wrapper {
            position: relative;
            display: inline-block;
            width: 100%;
            max-width: 384px;
            margin: 0 auto;
        }

        .input-box::placeholder {
            color: var(--text-muted);
        }

        .btn-primary {
            background: var(--gradient);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: var(--gradient-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        button.invoice-btn {
            width: 100%;
            max-width: 384px;
            border-radius: 8px;
            padding: 10px;
            font-weight: 600;
        }

        p.label {
            font-size: 14px;
            color: var(--text-muted);
            margin-top: 10px;
        }

        @media (max-width: 576px) {
            .invoice-box {
                padding: 30px 15px;
            }

            .input-box {
                font-size: 13px;
            }
        }

        #error-msg {
            font-size: 14px;
            color: var(--error);
        }

        .info-text {
            text-align: left;
            font-size: 14px;
            color: var(--text-muted);
        }

        /* Animation for form elements */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .invoice-box form > * {
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }

        .invoice-box form > *:nth-child(1) { animation-delay: 0.1s; }
        .invoice-box form > *:nth-child(2) { animation-delay: 0.2s; }
        .invoice-box form > *:nth-child(3) { animation-delay: 0.3s; }
        .invoice-box form > *:nth-child(4) { animation-delay: 0.4s; }
        .invoice-box form > *:nth-child(5) { animation-delay: 0.5s; }
        .invoice-box form > *:nth-child(6) { animation-delay: 0.6s; }
        .invoice-box form > *:nth-child(7) { animation-delay: 0.7s; }
        .invoice-box form > *:nth-child(8) { animation-delay: 0.8s; }
        .invoice-box form > *:nth-child(9) { animation-delay: 0.9s; }
    </style>
</head>

<body>

    <%- include('../partials/header') %>

        <div class="d-flex">
            <%- include('../partials/sidebar') %>
            <%- include('../partials/tosta') %>

                <div class="flex-grow-1 p-4">
                    <div class="invoice-box">
                        <h4 class="invoice-text mb-3">Create Invoice</h4>

                        <form id="invoiceForm" class="text-left">

                            <div class="select-wrapper">
                                <div class="text-start px-2"> <label for="task_id" class="info-text">Services</label>
                                </div>
                                <select class="select-box" name="task_id" id="task_id" required>
                                    <option value="">Select Task</option>
                                    <% tasks.forEach(task=> { %>
                                        <option value="<%= task._id %>" data-amount="<%= task.budget %>"
                                            data-customer="<%= task.user_id.username %>">
                                            <%= task.title %> (<%= task.user_id.username %>)
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="text-start px-5"> <label for="customer_name" class="info-text">Customer
                                    name</label></div>

                            <input type="text" id="customer_name" name="customer_name" class="input-box"
                                placeholder="Customer Name" required readonly />
                            <div class="text-start px-5"> <label for="amount" class="info-text">Amount</label></div>
                            <input type="number" id="amount" name="amount" class="input-box" placeholder="Amount"
                                required />
                            <div class="text-start px-5"> <label for="platformfee" class="info-text">Platform Fee
                                    (10%)</label></div>
                            <input type="number" id="platformfee" name="platformfee" class="input-box"
                                placeholder="Platform Fee (10%)" required readonly />
                            <div class="text-start px-5"> <label for="total" class="info-text">Total</label></div>
                            <input type="number" id="total" name="total" class="input-box" placeholder="Total" required
                                readonly />

                            <button type="submit" class="btn btn-primary invoice-btn">Create Invoice</button>
                        </form>

                        <!-- Toast Notification -->
                        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 2000">
                            <div id="signupToast" class="toast align-items-center text-bg-success border-0"
                                role="alert">
                                <div class="d-flex">
                                    <div class="toast-body" id="toast-message"></div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                                        data-bs-dismiss="toast"></button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                <script>
                    document.getElementById("task_id").addEventListener("change", function () {
                        const selectedOption = this.options[this.selectedIndex];
                        document.getElementById("amount").value = selectedOption.dataset.amount || "";
                        document.getElementById("customer_name").value = selectedOption.dataset.customer || "";
                        updateTotals();
                    });

                    document.getElementById("amount").addEventListener("input", updateTotals);

                    function updateTotals() {
                        let amount = parseFloat(document.getElementById("amount").value) || 0;
                        let platformFee = (amount * 0.10).toFixed(2);
                        let total = (amount + parseFloat(platformFee)).toFixed(2);

                        document.getElementById("platformfee").value = platformFee;
                        document.getElementById("total").value = total;
                    }
                    const amountField = document.querySelector('input[name="amount"]');
                    const platformFeeField = document.querySelector('input[name="platformfee"]');
                    const totalField = document.querySelector('input[name="total"]');

                    // When amount changes, auto-calculate fee and total
                    amountField.addEventListener("input", function () {
                        const amount = parseFloat(this.value) || 0;
                        const fee = amount * 0.10; // 10%
                        platformFeeField.value = fee.toFixed(2);
                        totalField.value = (amount + fee).toFixed(2);
                    });

                    // If platform fee manually changes, update total
                    platformFeeField.addEventListener("input", function () {
                        const amount = parseFloat(amountField.value) || 0;
                        const fee = parseFloat(this.value) || 0;
                        totalField.value = (amount + fee).toFixed(2);
                    });
                    document.getElementById("invoiceForm").addEventListener("submit", function (e) {
                        e.preventDefault();

                        const data = {
                            task_id: document.getElementById("task_id").value,
                            amount: document.getElementById("amount").value,
                            platformfee: document.getElementById("platformfee").value,
                            total: document.getElementById("total").value
                        };

                        fetch("/worker/invoice/create", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify(data)
                        })
                            .then(res => res.json())
                            .then(res => {
                                if (res.success) {
                                     showToast('success', '"Invoice Created successfully!', `Please waite for user Payment`)
                                    window.location.href = "/worker/earnings/invoice";
                                } else {
                                    showToast('error', 'Invoice Creation Failed!', `${res.message}`)
                                }
                            });
                    });


                    // Toast Function
                </script>
</body>

</html>