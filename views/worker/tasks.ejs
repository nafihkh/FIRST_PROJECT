<script>
const tasksContainer = document.getElementById("tasksContainer");
const cartContainer = document.getElementById("cartContainer");

// Load tasks dynamically
async function loadTasks() {
    try {
        const res = await fetch("/worker/tasks/progress-nontaken");
        if (!res.ok) throw new Error("HTTP error " + res.status);
        const tasks = await res.json();
        tasksContainer.innerHTML = "";

        tasks.forEach(task => {
            const card = document.createElement("div");
            card.className = "col-md-3";
            card.innerHTML = `
                <div class="card rounded-3" style="background-color: #171c26;">
                    <img class="top rounded-top-3" src="${task.photo || '/images/task1.png'}" alt="">
                    <div class="d-flex justify-content-between px-2 align-items-center">
                        <div class="d-flex mt-2 position-relative align-items-center">
                            <img class="rounded-circle me-2" src="${task.user_id?.profile_photo || '/images/profileeg.jpg'}" width="25" height="25">
                            <span class="onlineornot rounded-circle"></span>
                            <span style="color: #BDC1CA; font-size: 14px;" class="fw-semibold">${task.user_id?.username || 'Unknown'}</span>
                        </div>
                        <h2 class="fw-bold my-auto" style="font-size: 14px; color: #fff;"><i class="bi bi-star-fill"></i> ${task.rating || '2.5'}</h2>
                    </div>
                    <p style="color: #565e6c; font-size: 14px;" class="px-2">${task.description || 'No description available'}</p>
                    <div class="d-flex justify-content-between px-2 mb-2">
                        <h2 class="fw-bold my-auto" style="font-size: 18px; color:#fff;">$${task.amount || 0}</h2>
                        <span style="color: #565e6c; font-size: 14px;">Due: ${task.duration || 'N/A'}</span>
                    </div>
                    <div class="px-2 text-end pb-1 mb-2">
                        <button data-id="${task._id}" class="btn rounded-3 btn-primary btn-sm add-to-cart">Add to cart</button>
                    </div>
                </div>
            `;
            tasksContainer.appendChild(card);
        });
    } catch (err) {
        console.error(err);
    }
}

// Load cart dynamically
async function loadCart() {
    try {
       const res = await fetch("/worker/cart");
        if (!res.ok) throw new Error("HTTP error " + res.status);
        const cart = await res.json();
        const tasks = cart.cart || []; // <-- FIXED
        cartContainer.innerHTML = "";

        tasks.forEach(task => {
            const itemDiv = document.createElement("div");
            itemDiv.className = "row justify-content-center rounded-3 mb-3"; // mb-2 instead of mb-3
            itemDiv.style = "background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%); border-left: 4px solid #636AE8;";
            itemDiv.innerHTML = `
                <img class="cart-img rounded-start-3 col-md-7 m-0 p-0" src="${task.photo || '/images/task1.png'}" alt="">
                <div class="col-md-5">
                    <h6 class="mt-2 mb-0 pb-0" style="color: #fff; font-size: 14px;">${task.title || task.description || 'No title'}</h6>
                    <label class="mt-0 pt-0 mb-1" style="color: #565e6c; font-size: 11px;">by ${task.user_id?.username || 'Unknown'}</label>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="fw-bold my-auto" style="font-size: 16px; color:#fff;">$${task.amount || 0}</h5>
                        <span style="color: #565e6c; font-size: 14px;">Due: ${task.duration || 'N/A'}</span>
                    </div>
                    <div >
                        <button data-id="${task._id}" class="btn rounded-2 btn-secondary btn-sm cancel-btn" style="font-size: 14px;">Cancel</button>
                        <button data-id="${task._id}" onclick="proceedTask('${task._id}')" class="btn rounded-2 btn-sm" style="font-size: 14px; color: #fff; background-color: #1dd75b;">Proceed</button>
                    </div>
                </div>
            `;
            cartContainer.appendChild(itemDiv);
        });

        // Cancel button
        cartContainer.querySelectorAll(".cancel-btn").forEach(btn => {
            btn.addEventListener("click", async (e) => {
                const taskId = e.target.dataset.id;
                try {
                    const res = await fetch("/worker/cart/remove", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ taskId })
                    });
                    if (res.ok) loadCart();
                    else alert("Failed to remove task");
                } catch (err) {
                    console.error(err);
                    alert("Server error");
                }
            });
        });

    } catch (err) {
        console.error(err);
    }
}

// Add to Cart button (event delegation)
tasksContainer.addEventListener("click", async (e) => {
    if (!e.target.classList.contains("add-to-cart")) return;
    const taskId = e.target.dataset.id;
    try {
        const res = await fetch("/worker/cart/add", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ taskId })
        });
        const data = await res.json();
        if (res.ok) {
            alert("Task added to cart!");
             loadCart();
        } else {
            alert(data.error || "Error adding task");
        }
    } catch (err) {
        console.error(err);
        alert("Server error");
    }
});

// Calendar icon click
document.querySelector(".calendar-icon")?.addEventListener("click", () => {
    const input = document.getElementById("dateFilter");
    if (input.showPicker) input.showPicker(); else input.click();
});

// Load tasks on page load
document.addEventListener("DOMContentLoaded", () => {
    loadTasks();
});

async function proceedTask(taskId) {
  try {
    const res = await fetch("/worker/cart/proceed", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({ taskId })
    });

    const data = await res.json();
    if (data.success) {
      alert("Task moved to Active job");
      loadCart();
    } else {
      alert(data.error || "Something went wrong");
    }
  } catch (err) {
    console.error(err);
    alert("Server error");
  }
}

// Load cart when offcanvas opens
document.getElementById("cart").addEventListener("show.bs.offcanvas", loadCart);
</script>
