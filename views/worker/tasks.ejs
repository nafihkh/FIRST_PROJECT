<!DOCTYPE html>
<html lang="en">

<head>
    <title>Services | JobSeek</title>
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.ttf");
        }

        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --primary-darker: #1e3a8a;
            --secondary: #0ea5e9;
            --accent: #06b6d4;
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-card-hover: #334155;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
            --gradient-dark: linear-gradient(135deg, var(--primary-dark), var(--primary-darker));
        }

        body {
            font-family: "Inter";
            background-color: var(--dark-bg);
            color: var(--text-light);
        }

        .card {
            background: var(--dark-card);
            border: none;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
            height: 320px; /* Fixed card height */
            display: flex;
            flex-direction: column;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            border-color: rgba(59, 130, 246, 0.3);
        }

        .nav-link.active {
            background: var(--gradient) !important;
            color: var(--text-light) !important;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        
        .inbox {
            width: 139px;
            height: 36px;
            padding-left: 12px;
            padding-right: 34px;
            font-family: Inter;
            font-size: 14px;
            line-height: 22px;
            font-weight: 400;
            background: var(--dark-card);
            border-radius: 10px;
            border-width: 1px;
            border-color: rgba(255, 255, 255, 0.1);
            border-style: solid;
            outline: none;
            color: var(--text-muted);
            transition: all 0.3s ease;
        }

        .inbox:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            color: var(--text-light);
        }

        input[type="date"]::-webkit-calendar-picker-indicator {
            opacity: 0;
            cursor: pointer;
            position: relative;
            z-index: 1;
        }

        input[type="date"]::-moz-calendar-picker-indicator {
            opacity: 0;
            cursor: pointer;
        }

        input[type="date"] {
            position: relative;
        }

        input[type="date"]::after {
            font-style: normal;
            font-variant: normal;
            text-rendering: auto;
            display: inline-block;
            color: var(--text-light);
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

        .date-wrapper {
            position: relative;
            display: inline-block;
        }

        .date-wrapper input[type="date"] {
            padding-right: 40px;
        }

        .date-wrapper .calendar-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .date-wrapper .calendar-icon:hover {
            color: var(--primary);
        }

        input[type="date"]:focus {
            border: 1px solid var(--primary);
            background-color: rgba(255, 255, 255, 0.05);
        }

        .search-wrapper {
            position: relative;
            display: inline-block;
        }

        .search-icon {
            position: absolute;
            top: 8px;
            left: 9px;
            width: 20px;
            height: 20px;
        }

        #searchFilter {
            padding-left: 34px;
            width: 100%;
        }

        #searchFilter::placeholder {
            color: var(--text-muted);
        }

        .onlineornot {
            background: var(--success);
            height: 8px;
            width: 8px;
            position: absolute;
            top: 17px;
            left: 19px;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.2); opacity: 0.7; }
            100% { transform: scale(1); opacity: 1; }
        }

        .top {
            width: 100%;
            height: 140px; /* Fixed image height */
            object-fit: cover;
            transition: all 0.3s ease;
            border-radius: 12px 12px 0 0;
        }

        .cart-img {
            width: 100%;
            height: 80px; /* Smaller fixed height for cart */
            object-fit: cover;
            border-radius: 8px;
        }

        #cartContainer::-webkit-scrollbar {
            width: 0; 
        }
        #cartContainer {
            -ms-overflow-style: none;  
            scrollbar-width: none; 
        }

        .btn-primary {
            background: var(--gradient);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: var(--gradient-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

        .btn-secondary {
            background-color: var(--text-muted);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: var(--text-muted);
            opacity: 0.8;
            transform: translateY(-2px);
        }

        /* Animation for task cards */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .task-card {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

        .task-card:nth-child(1) { animation-delay: 0.1s; }
        .task-card:nth-child(2) { animation-delay: 0.2s; }
        .task-card:nth-child(3) { animation-delay: 0.3s; }
        .task-card:nth-child(4) { animation-delay: 0.4s; }
        .task-card:nth-child(5) { animation-delay: 0.5s; }
        .task-card:nth-child(6) { animation-delay: 0.6s; }
        .task-card:nth-child(7) { animation-delay: 0.7s; }
        .task-card:nth-child(8) { animation-delay: 0.8s; }

        /* Animation for cart items */
        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .cart-item {
            animation: slideInRight 0.4s ease forwards;
        }

        .offcanvas {
            background: var(--dark-card) !important;
            border-left: 1px solid rgba(255, 255, 255, 0.1);
        }

        .filter-section {
            background-color: var(--dark-card);
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

        .filter-section:hover {
            border-color: rgba(59, 130, 246, 0.2);
        }

        /* Button animations */
        @keyframes bounce {
            0%, 20%, 60%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            80% { transform: translateY(-5px); }
        }

        .add-to-cart:active {
            animation: bounce 0.5s;
        }

        /* Card content spacing */
        .card-content {
            padding: 12px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .card-description {
            flex: 1;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        /* Cart item styling */
        .cart-item-card {
            background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%);
            border-left: 4px solid #636AE8;
            border-radius: 12px;
            padding: 12px;
            margin-bottom: 12px;
        }
        .cart-img {
            width: 225px;
            height: 137px;
        }

        #cartContainer::-webkit-scrollbar {
            width: 0; 
        }
        #cartContainer {
            -ms-overflow-style: none;  
            scrollbar-width: none; 
        }
        .swal-dark-theme {
        border: 1px solid #334155;
        box-shadow: 0 0 15px rgba(59, 130, 246, 0.25);
        border-radius: 12px;
        }
        .swal-confirm-btn {
        font-weight: 600;
        box-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
        }
        .swal-cancel-btn {
        font-weight: 600;
        box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);
        }
    </style>
</head>

<body>

    <%- include('../partials/header') %>

        <div class="d-flex">

            <%- include('../partials/sidebar') %>
             <%- include('../partials/tosta') %>

                <div class="flex-grow-1 p-4">
                    <div class="d-flex justify-content-between">
                        <h3 class="fw-bold mb-4" style="color: var(--text-light);">Tasks</h3>
                        <button type="button" data-bs-toggle="offcanvas" data-bs-target="#cart" aria-controls="cart" style="height: 40px;" class="btn btn-primary">
                            <i class="bi bi-bookmark-check-fill me-2"></i>Saved Jobs
                        </button>
                    </div>
                    
                    <div class="filter-section d-flex gap-3 mb-4 p-4 rounded-3">
                        <div class="d-flex align-items-center">
                            <label style="color: var(--text-muted); font-size: 14px" for="">Status:</label>
                            <select id="statusFilter" class="form-select inbox text-white border-0 ms-1" style="width: 150px">
                                <option value="all">All Status</option>
                                <option value="Approved">Approved</option>
                                <option value="Pending">Pending</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                        <div class="d-flex align-items-center">
                            <label style="color: var(--text-muted); font-size: 14px" for="">Date:</label>
                            <div class="date-wrapper">
                                <input type="date" id="dateFilter" name="date" class="form-control text-white border-0 inbox ms-1 w-auto" />
                                <span class="calendar-icon"><i class="fa-solid fa-calendar-days"></i></span>
                            </div>
                        </div>

                        <div class="search-wrapper">
                            <img class="search-icon" src="https://res.cloudinary.com/dqugwh4su/image/upload/v1761538455/search_lxfgxx.svg" alt="" />
                            <input type="search" id="searchFilter" class="inbox" placeholder="Search..." />
                        </div>
                    </div>

                    <div class="row g-3 mb-4" id="tasksContainer">
                        <!-- Task cards will be dynamically loaded here -->
                    </div>
                </div>
        </div>

        <!-- Saved Jobs Offcanvas -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="cart" aria-labelledby="cartLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title fw-bold" style="color: var(--text-light);">Job Cart</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body" id="cartContainer">
                <!-- Cart items will be dynamically loaded here -->
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script>
        const tasksContainer = document.getElementById("tasksContainer");
        const cartContainer = document.getElementById("cartContainer");
        let allTasks = [];
        let filteredTasks = [];

        // Load tasks dynamically
        async function loadTasks() {
            try {
                const res = await fetch("/worker/tasks/progress-nontaken");
                if (!res.ok) throw new Error("HTTP error " + res.status);
                allTasks = await res.json();
                filteredTasks = allTasks;
                renderTasks(filteredTasks);


            } catch (err) {
                console.error(err);
                tasksContainer.innerHTML = `<div class="col-12 text-center" style="color: var(--text-muted);">Error loading tasks. Please try again.</div>`;
            }
        }
        function renderTasks(list) {
            tasksContainer.innerHTML = "";

            if (list.length === 0) {
                tasksContainer.innerHTML =
                    `<div class="col-12 text-center" style="color: var(--text-muted);">No matching tasks</div>`;
                return;
            }

            list.forEach((task, index) => {
                const card = document.createElement("div");
                card.className = `col-md-3 task-card`;
                card.style.animationDelay = `${index * 0.1}s`;
                card.innerHTML = `
                    <div class="card rounded-3">
                        <img class="top" src="${task.photo || '/images/task1.png'}">
                        <div class="card-content">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex position-relative align-items-center">
                                    <img class="rounded-circle me-2" src="${task.user_info?.profile_photo || 'https://res.cloudinary.com/dqugwh4su/image/upload/v1761538454/profileeg_tnbpak.jpg'}"
                                        width="25" height="25">
                                    <span class="onlineornot rounded-circle"></span>
                                    <span class="fw-semibold" style="color: var(--text-muted); font-size: 14px;">
                                        ${task.user_info?.username || 'Unknown'}
                                    </span>
                                </div>
                                <h2 class="fw-bold my-auto" style="font-size: 14px; color: var(--text-light);">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    ${task.worker_info?.rating ?? 'N/A'}
                                </h2>
                            </div>

                            <p style="color: var(--text-muted); font-size: 14px;" class="card-description">
                                ${task.description}
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <h2 class="fw-bold" style="font-size: 18px; color:var(--text-light);">$${task.amount}</h2>
                                <span style="color: var(--text-muted); font-size: 14px;">Due: ${task.duration}</span>
                            </div>

                            <div class="text-end mt-2">
                                <button data-id="${task._id}" class="btn rounded-3 btn-primary btn-sm add-to-cart">
                                    <i class="bi bi-bookmark-fill me-2"></i> Save
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                tasksContainer.appendChild(card);
            });
        }
        function applyFilters() {
            const status = document.getElementById("statusFilter").value;
            const date = document.getElementById("dateFilter").value;
            const search = document.getElementById("searchFilter").value.toLowerCase();

            filteredTasks = allTasks.filter(task => {
                
                // ✅ Status filter
                const statusMatch =
                    status === "all" || (task.status && task.status.toLowerCase() === status.toLowerCase());

                // ✅ Date filter
                const dateMatch =
                    !date || (task.created_at && task.created_at.slice(0, 10) === date);

                // ✅ Search: title + description + username
                const searchMatch =
                    !search ||
                    (task.title || "").toLowerCase().includes(search) ||
                    (task.description || "").toLowerCase().includes(search) ||
                    (task.user_info?.username || "").toLowerCase().includes(search);

                return statusMatch && dateMatch && searchMatch;
            });

            renderTasks(filteredTasks);
        }
        document.getElementById("statusFilter").addEventListener("change", applyFilters);
        document.getElementById("dateFilter").addEventListener("change", applyFilters);
        document.getElementById("searchFilter").addEventListener("input", applyFilters);


        // Load cart dynamically
        async function loadCart() {
            try {
                const res = await fetch("/worker/cart");
                if (!res.ok) throw new Error("HTTP error " + res.status);
                const cart = await res.json();
                const tasks = cart.cart || [];
                cartContainer.innerHTML = "";

                if (tasks.length === 0) {
                    cartContainer.innerHTML = `<div class="text-center" style="color: var(--text-muted);">No saved jobs</div>`;
                    return;
                }

                tasks.forEach((task, index) => {
                   const itemDiv = document.createElement("div");
                    itemDiv.className = "row justify-content-center rounded-3 mb-3"; // mb-2 instead of mb-3
                    itemDiv.style = "background: linear-gradient(-70deg, #222426FF 0%, #2A2C2FFF 100%); border-left: 4px solid #636AE8;";
                    itemDiv.innerHTML = `
                        <img class="cart-img rounded-start-3 col-md-7 m-0 p-0" src="${task.photo || '/images/task1.png'}" alt="">
                        <div class="col-md-5">
                            <h6 class="mt-2 mb-0 pb-0" style="color: #fff; font-size: 14px;">${task.title || task.description || 'No title'}</h6>
                            <label class="mt-0 pt-0 mb-1" style="color: #565e6c; font-size: 11px;">by ${task.user_id?.username || 'Unknown'}</label>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="fw-bold my-auto" style="font-size: 16px; color:#fff;">$${task.amount || 0}</h5>
                                <span style="color: #565e6c; font-size: 14px;">Due: ${task.duration || 'N/A'}</span>
                            </div>
                            <div >
                                <button data-id="${task._id}" class="btn rounded-2 btn-secondary btn-sm cancel-btn" style="font-size: 14px;">Cancel</button>
                                <button data-id="${task._id}" onclick="proceedTask('${task._id}')" class="btn rounded-2 btn-sm" style="font-size: 14px; color: #fff; background-color: #1dd75b;">Proceed</button>
                            </div>
                        </div>
                    `;
                    cartContainer.appendChild(itemDiv);
                });

                // Cancel button event listeners
                cartContainer.querySelectorAll(".cancel-btn").forEach(btn => {
                    btn.addEventListener("click", async (e) => {
                        const taskId = e.target.dataset.id;
                        try {
                            const res = await fetch("/worker/cart/remove", {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ taskId })
                            });
                            if (res.ok) {
                               
                                showToast('success', 'Task removed from saved jobs','remove from saved jobs check out');
                                closeCartOffcanvas();
                                loadCart();
                                loadTasks();
                            } else {
                                showToast('error', 'Failed to remove task', 'Somthing wrong');
                                closeCartOffcanvas();
                            }
                        } catch (err) {
                            console.error(err);
                            showToast('error', 'Server error');
                        }
                    });
                });

            } catch (err) {
                console.error(err);
                cartContainer.innerHTML = `<div class="text-center" style="color: var(--text-muted);">Error loading saved jobs</div>`;
            }
        }
        function closeCartOffcanvas() {
            const cartOffcanvas = document.getElementById("cart");
            const bsOffcanvas = bootstrap.Offcanvas.getInstance(cartOffcanvas);
            bsOffcanvas && bsOffcanvas.hide();
        }

        // Add to Cart button (event delegation)
        tasksContainer.addEventListener("click", async (e) => {
            if (!e.target.classList.contains("add-to-cart")) return;
            const taskId = e.target.dataset.id;
            try {
                const res = await fetch("/worker/cart/add", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ taskId })
                });
                const data = await res.json();
                if (res.ok) {
                    showToast('success', 'Task added to saved jobs!','Check out saved jobs');
                    loadCart();
                    loadTasks();
                } else {
                    showToast('error', data.error || "Error adding task" ,'check details');
                }
            } catch (err) {
                console.error(err);
                showToast('error', 'Server error', err);
            }
        });

        // Calendar icon click
        document.querySelector(".calendar-icon")?.addEventListener("click", () => {
            const input = document.getElementById("dateFilter");
            if (input.showPicker) input.showPicker(); else input.click();
        });

        // Load tasks on page load
        document.addEventListener("DOMContentLoaded", () => {
            loadTasks();
        });

        async function proceedTask(taskId) {
            try {
                const res = await fetch("/worker/cart/proceed", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ taskId })
                });

                const data = await res.json();
                if (data.success) {
                    showToast('success', 'Task moved to Active job', 'PLease Waite for User Responce');
                    closeCartOffcanvas();
                    loadCart();
                    loadTasks(); // Reload tasks to reflect changes
                } else {
                    showToast('warning', '"Something went wrong', data.error);
                    closeCartOffcanvas();
                }
            } catch (err) {
                console.error(err);
                showToast('error', 'Server error!', `${err}`)
            }
        }

        // Load cart when offcanvas opens
        document.getElementById("cart").addEventListener("show.bs.offcanvas", loadCart);

        // Simple toast function
        </script>
</body>
</html>